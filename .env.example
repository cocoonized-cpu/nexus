# NEXUS Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://nexus:nexus_dev@localhost:5432/nexus
POSTGRES_USER=nexus
POSTGRES_PASSWORD=nexus_dev
POSTGRES_DB=nexus

# Redis
REDIS_URL=redis://localhost:6379

# API Gateway
API_PORT=8000
API_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# ArbitrageScanner API (optional)
ARB_SCANNER_API_KEY=

# Exchange API Keys (encrypted in DB, these are for initial setup)
BINANCE_API_KEY=
BINANCE_API_SECRET=
BYBIT_API_KEY=
BYBIT_API_SECRET=
OKX_API_KEY=
OKX_API_SECRET=
OKX_PASSPHRASE=

# Notification Channels (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# Risk Settings
MAX_POSITION_SIZE_USD=100000
MAX_TOTAL_EXPOSURE_USD=1000000
MAX_DRAWDOWN_PCT=10

# Feature Flags
ENABLE_AUTO_EXECUTE=false
ENABLE_PAPER_TRADING=true
